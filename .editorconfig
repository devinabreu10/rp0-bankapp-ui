# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 95 # won't start wrapping code until it hits max characters in a line

[*.ts]
quote_type = single # prettier forces single(or double) quotes on strings when formatting

[*.md]
max_line_length = off
trim_trailing_whitespace = false
